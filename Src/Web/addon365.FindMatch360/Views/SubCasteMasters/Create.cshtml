@model SubCasteViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
    <div class="breadcrumb-title pr-3">SubCaste</div>
    <div class="pl-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class='bx bx-home-alt'></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"><a asp-action="Index">Create</a></li>
            </ol>
        </nav>
    </div>
    <div class="ml-auto">
        <div class="btn-group">
            <a asp-action="Index">
                <button type="button" class="btn btn-primary"> Back to List</button>
            </a>
        </div>
    </div>

</div>
<!--end breadcrumb-->


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <!--end breadcrumb-->
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SubCasteName" class="control-label"></label>
                            <input asp-for="SubCasteName" class="form-control" />
                            <span asp-validation-for="SubCasteName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Caste </label>
                            <select id="pastted1" asp-for="@Model.ParentCasteId" asp-items="@Model.Castes.Select(m=>new SelectListItem(){ Text = m.CasteName, Value = m.CasteMasterId.ToString() })" class="form-control"></select>
                            @*<select asp-for="@Model.ParentCasteId" asp-items="@Model.Castes.Select(m=>new SelectListItem(){ Text = m.CasteName, Value = m.CasteMasterId.ToString() })" class="form-control"></select>*@
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                    <div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
