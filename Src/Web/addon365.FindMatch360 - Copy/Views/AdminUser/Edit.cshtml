
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit";
}
<div class="row page-header">
    <div class="col-lg-6 align-self-center ">
        <h2>Dashboard</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Account" asp-action="admin">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Admin User</a></li>
        </ol>
    </div>
    <div class="col-lg-6 align-self-center text-right">
        <a asp-action="Index" class="btn btn-success box-shadow btn-icon btn-rounded"><i class="fa fa-arrow-left"></i> Back to List</a>
    </div>
</div>

<section class="main-content">
 <div class="row">
        <div class="col-md-12 card">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div  class="text-danger"></div>
                        <input type="hidden"/>
                        <div class="form-group">
                            <label  class="control-label"></label>
                            <input  class="form-control" />
                            <span  class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
              </div>
             <div>
           </div>
        </div>
    </div>
</section>